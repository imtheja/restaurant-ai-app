# Restaurant AI Environment Configuration

# Database
DATABASE_URL=postgresql://restaurant_user:restaurant_pass@localhost:5432/restaurant_ai

# Redis
REDIS_URL=redis://localhost:6379

# AI Services (choose one)
GROQ_API_KEY=gsk_your_groq_api_key_here
OPENAI_API_KEY=sk_your_openai_api_key_here

# Application
PORT=8080
DEBUG=false

# Domain configuration
APP_DOMAIN=restaurant-ai.com

# Session secret (generate a random string)
SESSION_SECRET=your_random_secret_key_here

# Analytics database (optional, for read replicas)
ANALYTICS_DATABASE_URL=postgresql://restaurant_analytics:analytics_password@localhost:5432/restaurant_ai